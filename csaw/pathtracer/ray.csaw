def ray {
    origin: point3,
    direction: vec3,
    t: interval
}

$ray(origin: point3, direction: vec3, t: interval) {
    me!origin = origin;
    me!direction = direction;
    me!t = t;
}

@at:ray(t: flt64): point3 = me!origin + t * me!direction;

@dump:ray = printf("%p: origin=[%f, %f, %f] direction=[%f, %f, %f] t=[%f, %f]\n", me, me!origin.x, me!origin.y, me!origin.z, me!direction.x, me!direction.y, me!direction.z, me!t.min, me!t.max);
