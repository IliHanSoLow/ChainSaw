def ray {
    origin: point3,
    direction: vec3,
    time: flt64
}

@ray(origin: point3, direction: vec3, time: flt64) {
    me!origin = origin;
    me!direction = direction;
    me!time = time;
}

@ray(origin: point3, direction: vec3) = *me = ray(origin, direction, 0);
@ray = *me = ray(vec3(), vec3(), 0);

@at:ray(t: flt64): point3 = me!origin + t * me!direction;

