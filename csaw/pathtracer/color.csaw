intensity: interval = interval(0.000, 0.999);

@toint(col: color): int32 {
    r: flt64 = col.x;
    g: flt64 = col.y;
    b: flt64 = col.z;

    rbyte: int32 = [int32](256 * intensity.clamp(r));
    gbyte: int32 = [int32](256 * intensity.clamp(g));
    bbyte: int32 = [int32](256 * intensity.clamp(b));

    ret 0xff << 24 | (rbyte & 0xff) << 16 | (gbyte & 0xff) << 8 | (bbyte & 0xff);
}
